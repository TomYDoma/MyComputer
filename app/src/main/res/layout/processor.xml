<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewZagolovok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:paddingLeft="50px"
                android:text="Центральный процессор"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                app:srcCompat="@drawable/cp" />

            <TextView
                android:id="@+id/textViewContent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:text="@string/cpu1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textViewZagolovok1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:paddingLeft="50px"
                android:text="Как работает процессор"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                app:srcCompat="@drawable/cpu_schema" />

            <TextView
                android:id="@+id/textViewContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:text="@string/cpu2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>