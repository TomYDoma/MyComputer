<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/motherboardbuttons"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="84dp"
                android:onClick="notherboardclick"
                android:text="Материнская плата" />

            <Button
                android:id="@+id/processorbuttons"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="processoronclick"
                android:text="ЦП" />

            <Button
                android:id="@+id/memory"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="memoryonclick"
                android:text="ОЗУ" />

            <Button
                android:id="@+id/power"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="poweronclick"
                android:text="Блок питания" />

            <Button
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="videoonclick"
                android:text="Видеокарта" />

            <Button
                android:id="@+id/cool"
                android:layout_width="match_parent"
                android:onClick="coolonclick"
                android:layout_height="90dp"
                android:text="Система охлаждения " />

            <Button
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:onClick="bodyonclick"
                android:layout_height="90dp"
                android:text="Корпус" />

            <Button
                android:id="@+id/hdd"
                android:layout_width="match_parent"
                android:onClick="hddonclick"
                android:layout_height="90dp"
                android:text="Жесткий диск (HDD)" />

            <Button
                android:id="@+id/ssd"
                android:layout_width="match_parent"
                android:onClick="ssdonclick"
                android:layout_height="90dp"
                android:text="Твердотельный накопитель (SSD)" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>